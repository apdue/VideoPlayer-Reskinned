<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/screen_background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/fbadsnativenew"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            tools:ignore="UselessParent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rlImageView"
                    android:layout_width="match_parent"
                    android:layout_height="250dp">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/app_name"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_image_23rd" />

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/fbadsnativeapp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rlImageView"
                    android:layout_marginBottom="5dp"
                    android:background="@android:color/transparent">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_margin="0dp"
                        app:cardBackgroundColor="@color/app_bck_color"
                        app:cardCornerRadius="0dp"
                        app:cardElevation="0dp">

                        <FrameLayout
                            android:id="@+id/flBigSizeNative"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="245dp"
                            android:visibility="visible" />
                    </androidx.cardview.widget.CardView>
                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/rlStartView"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_below="@id/fbadsnativeapp"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg_button_23rd">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="15dp"
                        android:layout_centerVertical="true">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/bold_23rd"
                            android:text="Get Started"
                            android:layout_marginBottom="10dp"
                            android:textColor="@color/white"
                            android:textSize="25sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/layout_round_bg_23rd"
                            android:fontFamily="@font/outfit_medium_23rd"
                            android:paddingStart="15dp"
                            android:paddingTop="7dp"
                            android:paddingEnd="15dp"
                            android:paddingBottom="7dp"
                            android:text="Start App"
                            android:textColor="@color/AppThemColor" />


                    </LinearLayout>

                    <androidx.constraintlayout.utils.widget.ImageFilterView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="15dp"
                        android:src="@drawable/play_23rd"/>


                </RelativeLayout>

            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/fbadsnativenew"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@android:color/transparent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            app:cardBackgroundColor="@color/app_bck_color"
            app:cardCornerRadius="0dp"
            app:cardElevation="0dp">

            <FrameLayout
                android:id="@+id/flSmallSizeNative"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="50dp" />
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</RelativeLayout>